/*mask*/
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

/*content*/
/* 模态框 */
.drawer_box {
  width: 550rpx;
  height: 350rpx;
  /* overflow: hidden;   */

  z-index: 2000;
  background: #FFFFFF;
  /* background-image: url("http://weixin.siyanli.net.cn/static/miniimg/guize-01.png"); */
  /* margin-top: var(--height--); */
  /* margin-top: -350px;
  margin-left: 25px;
  margin-right: 25px; */
   /* 50rpx 0 50rpx; */
  border-radius: 20rpx;

  position: fixed;
  margin: 0 0 0 0;
  bottom: 400rpx;
  right: 100rpx;
  left: 100rpx;
}

.title{
  height: 50rpx;
  margin: 20rpx 0 0 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 45rpx;
  font-weight: bolder;
}
.msg{
  margin: 20rpx 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: gainsboro;
  height: 150rpx;
}

.drawer_content{
  display: flex;
  flex-direction: column;

}

.bt_con{
  display: flex;
  flex-direction: row;
}

.ok{
  height: 100rpx;
  width: 275rpx;
  font-size: 35rpx;
  font-weight: bolder;
  color: teal;
  border-top: 1px solid ghostwhite;
  border-left: 1px solid ghostwhite;
  border-radius: 0;
}

.cancel{
  height: 100rpx;
  width: 275rpx;
  font-size: 35rpx;
  font-weight: bolder;
  color: gray;
  border-top: 1px solid ghostwhite;
  border-right: 1px solid ghostwhite;
  border-radius: 0;
}