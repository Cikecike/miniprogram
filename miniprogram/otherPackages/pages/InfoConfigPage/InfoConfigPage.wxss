/* miniprogram/otherPackages/pages/InfoConfigPage.wxss */
page{
  background-color: #81a1bb13;
}

.container{
  display: flex;
  align-items: center;
  flex-direction: column;
  margin: 100rpx 0 30rpx 20rpx;
}

.itemView{
  display: flex;
  flex-direction: column;

  margin: 20rpx 0 30rpx 0rpx;
  background-color: #81a1bb13;

  width: 715rpx;
  height: 160rpx;

  border-radius: 20rpx;
}

.input{
    margin: 15rpx 15rpx 0rpx 25rpx;
    width: 480rpx;
    font-size: 30rpx;
    font-weight: 400;

}

.label{
    margin: 30rpx 0rpx 10rpx 20rpx;
    font-weight: 600;
    color:  rgba(102, 102, 102, 0.575)
}

.viewName{
  display: flex;
  justify-content: center;
  align-content: center;
  height: 200rpx;
  width: 100%;
  /* background-color: red */
}

.Btn{
  display:flex; 
  justify-content:center; 
  align-items:center;
/* /  align-items: center; */
  text-align: center;
  border-radius: 10rpx;

  color: rgba(102, 102, 102, 0.699);

  height: 100rpx;
  width: 200rpx;
  margin: 50rpx 50rpx 0rpx 50rpx;
  background-color: #81a1bb13;
  font-weight: 600;
  font-size: 25rpx;
}

.btn_hover{
    background-color: #7ea7c948;
}

.tips{
  display:flex; 
  justify-content:center; 
  align-items:center;
  text-align: center;
  margin: 50rpx;
  font-weight: 600;
  font-size: 25rpx;
  color: rgba(102, 102, 102, 0.753);
}

.title{
  display: flex;
  justify-content: center;
  align-content: center;
  height: 50rpx;
  width: 100%;
  font-size: 25rpx;
  font-weight: 400;
  color: rgba(97, 92, 92, 0.959)
}

.title_container{
  margin: 0 0 100rpx 0;
}

.Warn{
  display: flex;
  justify-content: center;
  align-content: center;
  height: 50rpx;
  width: 100%;
  font-size: 50rpx;
  font-weight:bold;
  color: rgba(97, 92, 92, 0.959);
  margin: 0 0 50rpx 0
}