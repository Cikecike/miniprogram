/* pages/BrowseGoods/BrowseGoods.wxss */
page{
  background-color:#f5f5f5;
}

.Browser{
  display: flex;
  flex-direction: column;
  /* background-color: #f5f5f5; */
  width: 100%;

}

.follow_icon{
  position: fixed;
  margin: 0 10rpx;
  width:70rpx;
  height:70rpx;
  bottom: 30rpx;
  right: 20rpx;
  z-index: 999;
}

.headers{
  height: 80rpx;
  margin: 0 0 50rpx 0 0;
  display: flex;
  justify-content: center;
  align-content: center;
  background-color: #c3ccdb;
  font-size: 35rpx;
  font-weight: bold;
  color: white;
}

.None_info{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 1000rpx;
  width: 100%;
}

.title{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  font-size: 40rpx;
  font-weight: bold;
  height: 70rpx;
  margin:  0 15rpx 0 15rpx;
}

.title_container{
  margin: 10rpx 10rpx 10rpx 10rpx;
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
}
.title_input{
  width:600rpx;
  padding: 0 10rpx 0 10rpx;
  height: 70rpx;
  border-radius: 15rpx;
  background-color: rgb(240, 240, 240);
  /* font-size: 40rpx;
  font-weight: bold; */
}

.content{
  display: flex;
  width: 100%;
  font-size: 30rpx;
  font-weight: bold;
  /* height: 50rpx; */
  margin:  0rpx 15rpx 0 15rpx;

}
.content_container{
  margin: 30rpx 10rpx 0 10rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.content_input{
  width: 720rpx;
  background-color: rgb(240, 240, 240);
  padding: 15rpx 15rpx 15rpx 15rpx;
}


